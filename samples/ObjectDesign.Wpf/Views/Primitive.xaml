<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:od="clr-namespace:Ao.ObjectDesign;assembly=Ao.ObjectDesign">
    <DataTemplate x:Key="ObjectDesign.Primitive"
                  DataType="{x:Type od:PropertyProxy}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding PropertyInfo.Name}"/>
            <TextBox Text="{Binding Instance,Mode=TwoWay}"
                     Grid.Column="1"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ObjectDesign.Number"
                  DataType="{x:Type od:PropertyProxy}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding PropertyInfo.Name}"/>
            <m:NumericUpDown Value="{Binding Instance,Mode=TwoWay}"
                             Interval="0.5"
                             Grid.Column="1"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>