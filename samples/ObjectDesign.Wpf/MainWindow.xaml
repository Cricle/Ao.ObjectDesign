<m:MetroWindow x:Class="ObjectDesign.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectDesign.Wpf"
        xmlns:m="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="Providing" SelectionChanged="Providing_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding UIType}" ToolTip="{Binding ClrType}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <m:SplitView x:Name="Sv" Grid.Column="1">
        </m:SplitView>
        <ScrollViewer Grid.Column="2">
            <ItemsControl x:Name="Design">

            </ItemsControl>
        </ScrollViewer>
    </Grid>

</m:MetroWindow>
