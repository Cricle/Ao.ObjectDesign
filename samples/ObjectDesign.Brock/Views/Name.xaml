<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:w="https://github.com/Cricle/Ao.ObjectDesign"
                    xmlns:l="https://github.com/Cricle/Ao.Lang">
    <DataTemplate x:Key="ObjectDesign.Name"
                  DataType="{x:Type w:WpfTemplateForViewBuildContext}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{l:Lang Cdev.DesignControl.Descripts.Name}"/>
            <TextBox DataContext="{Binding PropertyVisitor}"
                      Text="{Binding Value,Mode=TwoWay}"/>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>